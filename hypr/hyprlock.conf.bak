general {
    hide_cursor = true
}

background {
    monitor =
    path = ~/Pictures/wallpapers/dark.png
    blur_passes = 3
    blur_size = 8
    noise = 0.02
}

input-field {
    monitor =
    size = 300, 50
    position = 0, -100
    halign = center
    valign = center
    fade_on_empty = true
    rounding = 12
}

label {
    monitor =
    text = cmd[update:1000] date +"%H:%M"
    font_size = 64
    position = 0, 80
    halign = center
    valign = center
}

